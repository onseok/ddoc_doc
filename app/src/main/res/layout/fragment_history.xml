<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HistoryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/ddoc_doc_font"
        android:text="진료내역"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragmentHistoryIconImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_fragment_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/fragmentHistoryDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="원하는 병원을 찾아서\n  진료를 받아보세요."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentHistoryIconImageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentHistoryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/fragment_history_button"
        android:fontFamily="@font/ddoc_doc_font"
        android:text="진료받으러 가기   >"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentHistoryDetailTextView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragmentHistoryBannerImageView"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/history_banner"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/fragmentHistoryUserNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="3dp"
        android:background="#EAF3FC"
        android:fontFamily="@font/ddoc_doc_font"
        android:gravity="center"
        android:text="아무개님"
        android:textColor="#353D48"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/fragmentHistoryBannerImageView"
        app:layout_constraintStart_toStartOf="@id/fragmentHistoryBannerImageView"
        app:layout_constraintTop_toTopOf="@id/fragmentHistoryBannerImageView"
        app:layout_constraintVertical_bias="0.36"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>